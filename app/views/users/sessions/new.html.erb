<% if flash.now[:notice] %>
  <p class="notice"><%= flash.now[:notice] %></p>
<% end %>

<div class='text-center login_body'>
  <%= render 'users/shared/logo_link' %>
  <div class="login container">
    <div id="login-row" class="row justify-content-center align-items-center">
      <div id="login-column" class="col-md-6">
        <div id="login-box" class="col-md-12">
          <h3 class='h3 mb-3 login-font'>ログイン</h3>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class='mb-3'>
              <%= f.email_field :email, :placeholder => "メールアドレス", autofocus: true, autocomplete: "email", class: 'form-control' %>
            </div>
            <div class='mb-3'>
              <%= f.password_field :password, :placeholder => "パスワード", autocomplete: "current-password", class: 'form-control' %>
              <p>パスワードを忘れてしまった方は<%= link_to "こちら", new_password_path(resource_name), class: 'link_to' %></p>
            </div>
            <div class='checkbox mb-3'>
              <%= f.check_box :remember_me %>
              <%= f.label :"ログインを記憶する" %>
            </div>
            <div class='actions'>
              <%= f.submit "ログイン", class: "w-100 btn btn-lg btn-secondary" %>
            </div>
          <% end %>
          <p>アカウントの新規登録は<%= link_to "こちら", new_user_registration_path, class: 'link_to' %></p>
        </div>
      </div>
    </div>
  </div>
</div>
