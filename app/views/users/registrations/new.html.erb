<% if flash.now[:notice] %>
  <p class="notice"><%= flash.now[:notice] %></p>
<% end %>

<div class='text-center login_body'>
  <%= link_to (image_tag 'TO_YAMA.png', size: '200x63'), home_path, class: 'mb-4' %>
  <div class="login container">
    <div id="login-row" class="row justify-content-center align-items-center">
      <div id="login-column" class="col-md-6">
        <div id="login-box" class="col-md-12">
          <h3 class='h3 mb-3 login-font'>新規登録</h3>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class='mb-3'>
              <%= f.text_field :name, :placeholder => "ユーザー名", autofocus: true, autocomplete: "name", class: 'form-control' %>
            </div>
            <div class='mb-3'>
              <%= f.email_field :email, :placeholder => "メールアドレス", autofocus: true, autocomplete: "email", class: 'form-control' %>
            </div>
            <div class='mb-3'>
              <%= f.password_field :password, :placeholder => "パスワード(6文字以上)", autocomplete: "current-password", class: 'form-control' %>
            </div>

            <div class="field">
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password" %>
            </div>

            <div class='mb-3'>
              <%= f.password_field :password_confirmation, :placeholder => "パスワード確認", autocomplete: "new-password", class: 'form-control' %>
            </div>
            <div class='actions'>
              <%= f.submit "新規登録", class: "w-100 btn btn-lg btn-secondary" %>
            </div>
          <% end %>
          <p>ログインは<%= link_to "こちら", new_user_session_path, class: 'link_to' %></p>
        </div>
      </div>
    </div>
  </div>
</div>
