<%= content_for(:title, '新規登録') %>

<div class='text-center login_body'>
  <%= render 'users/shared/logo_link' %>
  <div class="login container">
    <div id="login-row" class="row justify-content-center align-items-center">
      <div id="login-column" class="col-md-6">
        <div id="login-box" class="col-md-12">
          <h3 class='h3 mb-3 login-font'>新規登録</h3>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class='mb-3'>
              <%= f.text_field :name, :placeholder => "ユーザー名", autofocus: true, autocomplete: "name", class: 'form-control' %>
            </div>
            <% if resource.errors.include?(:name) %>
              <ul class='error__messages'>
                <% resource.errors.full_messages_for(:name).each do |error_message| %>
                  <li><%= error_message %></li>
                <% end %>
              </ul>
            <% end %>
            <div class='mb-3'>
              <%= f.email_field :email, :placeholder => "メールアドレス", autofocus: true, autocomplete: "email", class: 'form-control' %>
            </div>
            <% if resource.errors.include?(:email) %>
              <ul class='error__messages'>
                <% resource.errors.full_messages_for(:email).each do |error_message| %>
                  <li><%= error_message %></li>
                <% end %>
              </ul>
            <% end %>
            <div class='mb-3'>
              <%= f.password_field :password, :placeholder => "パスワード(8文字以上)", autocomplete: "current-password", class: 'form-control' %>
            </div>
            <% if resource.errors.include?(:password) %>
              <ul class='error__messages'>
                <% resource.errors.full_messages_for(:password).each do |error_message| %>
                  <li><%= error_message %></li>
                <% end %>
              </ul>
            <% end %>
            <div class='mb-3'>
              <%= f.password_field :password_confirmation, :placeholder => "パスワード確認", autocomplete: "new-password", class: 'form-control' %>
            </div>
            <% if resource.errors.include?(:password_confirmation) %>
              <ul class='error__messages'>
                <% resource.errors.full_messages_for(:password_confirmation).each do |error_message| %>
                  <li><%= error_message %></li>
                <% end %>
              </ul>
            <% end %>
            <div class='actions'>
              <%= f.submit "新規登録", class: "w-100 btn btn-lg btn-secondary" %>
            </div>
          <% end %>
          <p>ログインは<%= link_to "こちら", new_user_session_path, class: 'link_to' %></p>
        </div>
      </div>
    </div>
  </div>
</div>
